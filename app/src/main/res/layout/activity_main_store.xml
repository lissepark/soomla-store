<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              tools:context=".MainStoreActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/linearLayout">
        <TextView
                android:text="@string/soomla_store_android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_store"
                />
    </LinearLayout>

    <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:dividerHeight="2sp"
            android:cacheColorHint="@android:color/transparent"
            android:layout_weight="1"/>

    <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/store"
                android:orientation="horizontal"
                android:layout_gravity="center|top">

        <Button
                android:text="@string/button_restore"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/button_restore_trans"
                />
        <Button
                android:text="@string/button_buypack"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:id="@+id/button_buy_packs"
                android:layout_toRightOf="@id/button_restore_trans"/>

    </LinearLayout>
</LinearLayout>
